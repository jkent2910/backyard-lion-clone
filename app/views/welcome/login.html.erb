  <!-- MOBILE VIEW -->


   <div class="logo-login"><%= image_tag("logo.png") %></div>
      <div class="col-xs-12">
      	<h1 class="mobile-welcome">Connect <br> with Colleges</h1>
   			<hr>
      		<%= form_for(:user, :url => session_path(:user)) do |f| %>
		       <div class="form-group">
		         <%= f.email_field :email, class: "form-control", placeholder: "email" %>
		       </div>
		      	<div class="form-group">
		        <%= f.password_field :password, class: "form-control", placeholder: "password" %>
		      	</div>
		      <div class="col-xs-12" style="color: #fff; padding-top: 8px;">
		        <%= f.submit "Sign in", class: "btn dark-btn btn-block btn-cta-primary" %>
	          </div>
	      <% end %>
	      <div class="form-group forgot-password-mobile" style="color: #283b8c !important;">
	        <%= link_to "Forgot password?", forgot_password_path, class: "forgot-password-mobile" %>
	      </div>
	      <div class="form-group logins-signup-mobile" style="color: #283b8c !important;">
	      	<%= link_to "Sign up", signup_path, class: "signup" %>
	      </div>
	  </div>
	
