<div class="experience-div">
  <div class="col-md-1">
    <div class="byl-logo">
      <%= image_tag ("glyphicons-151-edit.png") %>
    </div>
  </div>
  <div class="col-md-11">
    <div class="content">
      <h3 class="main-header-txt">Edit College</h3>
      <%= form_for (@college) do |f| %>

          <% if @college.errors.any? %>
              <ul>

                <% @college.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                <% end %>
              </ul>

          <% end %>
          <div class="form-group">
            <%= f.label :name %><br/>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :nickname %><br/>
            <%= f.text_field :nickname, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :logo %>
            <%= f.file_field :logo %>
          </div>

          <div class="form-group">
            <%= f.label :city %><br/>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :state %><br/>
            <%= f.select :state, options_for_select(us_states, selected: f.object.state), {}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :enrollment %><br/>
            <%= f.text_field :enrollment, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :campus_setting %><br/>
            <%= f.select :campus_setting, options_for_select(campus_settings), {}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :school_type %><br/>
            <%= f.select :school_type, options_for_select(school_type), {}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :tuition_in_state %><br/>
            <%= f.text_field :tuition_in_state, class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.label :tuition_out_of_state %><br/>
            <%= f.text_field :tuition_out_of_state, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit class: 'btn btn-md btn-primary' %>
          </div>

      <% end %>
    </div>
  </div>
</div>

