<%= title 'Privacy Settings' %>


<div class="container main-container">
  <div class="col-md-12">
    <div class="page-header">
      <h1 class="primary-color">Account
        <small class="small-headers"> settings</small>
      </h1>
    </div>

    <%= form_for(@athlete_profile) do |f| %>

        <div class="page-header" style="border-bottom: 1px solid lightgray">
          <h3 class="primary-color">Privacy
            <small> settings</small>
          </h3>
        </div>
        <h4 class="primary-color">Contact Information</h4>
        <%= f.radio_button(:contact_info_privacy, "contact_info_public") %> Public <br/>
        <%= f.radio_button(:contact_info_privacy, "contact_info_college") %> Colleges Coaches/Recruiters Only <br/>
        <%= f.radio_button(:contact_info_privacy, "contact_info_private") %> Private

        <h4 class="primary-color">Academic Information</h4>
        <%= f.radio_button(:academic_info_privacy, "academic_info_public") %> Public <br/>
        <%= f.radio_button(:academic_info_privacy, "academic_info_college") %> Colleges Coaches/Recruiters Only <br/>
        <%= f.radio_button(:academic_info_privacy, "academic_info_private") %> Private (you)

        <div class="text-center"><br/>
          <%= f.submit "Save Privacy Settings", class: "btn btn-primary" %>
        </div>
        </div><br/><br/>

        <div class="page-header" style="border-bottom: 1px solid lightgray">
          <h3 class="primary-color">Deletion<small> of your account</small></h3>
        </div>
        <div class="text-right">
          <%= link_to "Delete Profile", remove_profile_athlete_profile_path(@athlete_profile), class: 'btn btn-danger' %>
        </div>
    <% end %>
    </div>
