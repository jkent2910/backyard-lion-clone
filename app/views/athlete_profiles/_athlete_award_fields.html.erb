<div class="nested-fields">
  <div class="form-group">
    <%= f.label :name %><span class="required-field-asterick">*</span>
    <br/>
    <%= f.select :name, options_for_select(valid_awards, selected: f.object.name), {include_blank: true}, class: "form-control" %>
    If "Other", please enter here:
    <%= f.text_field :other_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :issuer %>
    <br/>
    <%= f.text_field :issuer, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :year %><span class="required-field-asterick">*</span>
    <br/>
  <%= f.select :year, options_for_select(2010..2025, selected: f.object.year), {include_blank: true}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="text-right">
  <%= link_to_remove_association "Remove Award", f, class: "btn btn-danger" %>
  </div><br /><br />
</div>
