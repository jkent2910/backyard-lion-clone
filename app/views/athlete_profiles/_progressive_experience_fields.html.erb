<div class="nested-fields">
  <div class="individual-experience-prof">
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          Sport:<span class="required-field-asterick">*</span>
          <%= f.select :sport, valid_sports, {}, class: "form-control sport-select", id: "#{f.object.class.name}-#{f.index}", onchange: "updatePositions(this.value, this.id, this.name)" %>
        </div>
        <div class="col-md-4">
          Primary Position: <%= f.select :position, sport_positions, {include_blank: true}, class: "form-control position-select", id: "experience-#{f.index}" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          Level:<span class="required-field-asterick">*</span>
          <%= f.select :level, level_of_play, {}, class: "form-control" %>
        </div>
        <div class="col-md-4">
          High School or Club Name: <%= f.text_field :team_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          City: <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="col-md-4">
          State: <%= f.select :state, options_for_select(us_states), {include_blank: true}, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="text-right">
      <%= link_to_remove_association "Remove", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>
