<%= title 'Challenge Step 17' %>


<div class="container main-container">
  <div class="page-header">
    <h1 class="primary-color">Feedback
      <small> improvement opportunities</small>
    </h1>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="thumbnail"
           style="padding: 20px !important; border-top-left-radius: 4px; border-top-right-radius: 4px;">
        <%= image_tag @athlete_profile.profile_picture, class: 'athlete-profile-image' %>
        <div class="caption">
          <h3 class="text-uppercase text-center primary-color"><%= @athlete_profile.decorate.full_name %>
            <br>
            <small>
              <%= @athlete_profile.athlete_experiences.first.sport %> <%= @athlete_profile.athlete_experiences.first.position %>
            </small>
          </h3>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width:<%= @athlete_profile.profile_strength %>%"><%= @athlete_profile.profile_strength.round %>
              %
            </div>
          </div>
          <h4 class="text-muted">The average <%= @athlete_profile.athlete_experiences.first.sport %> athlete has
            62.8% profile strength.</h4>

          <br>

          <h4 class="text-muted"><%= @athlete_profile.user.first_name %>, request(s) have been
            made for you to add the following to your profile:</h4>
          <ul>
            <% if @athlete_profile.coaches.empty? %>
                <li class="primary-color">Complete coach information</li>
            <% end %>
            <% if @athlete_profile.twitter_url.blank? %>
                <li class="primary-color">Twitter handle</li>
            <% end %>
            <% if @athlete_profile.guardian_first_name.blank? %>
                <li class="primary-color">Complete guardian information</li>
            <% end %>
            <% if @athlete_profile.cum_gpa_score.blank? %>
                <li class="primary-color">GPA score</li>
            <% end %>
            <% if @athlete_profile.class_rank.blank? %>
                <li class="primary-color">Class rank</li>
            <% end %>
            <% if @athlete_profile.preferred_major.blank? %>
                <li class="primary-color">Preferred major</li>
            <% end %>
            <% if @athlete_profile.region_ratings.empty? %>
                <li class="primary-color">College location preferences</li>
            <% end %>
            <% if @athlete_profile.athlete_recommendations.empty? %>
                <li class="primary-color">Recommendation from a coach</li>
            <% end %>
            <% if @athlete_profile.athlete_recommendations.empty? %>
                <li class="primary-color">Recommendation from a teammate</li>
            <% end %>
            <% if @athlete_profile.endorsements.empty? %>
                <li class="primary-color">Skill endorsements</li>
            <% end %>
          </ul>

          <div style="text-align:center;">

            <h4 class="text-muted text-left">Get the most from Backyard Lion â€” improve your profile.</h4>
            <br>
            <%= link_to "Improve profile", edit_athlete_profile_path(@athlete_profile), class: "btn btn-primary-invert btn-lg" %>
          </div>

          <hr>
          <div style="text-align:center;">
            <h4 class="text-muted">You completed the Bronze Level Stand Out Challenge.</h4>
            <br>
            <p style="text-align:center;"><%= link_to "Complete", challenge_step_eighteen_athlete_profile_path(@athlete_profile), class: "btn btn-primary btn-lg", id: 'challenge-step-eighteen' %></p>
          </div>
        </div>
        <div class="text-center"></div>
      </div>
    </div>
  </div>
</div>